@model ArtCircler.ViewModels.EventFormViewModel
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Events"))
{
    <p class="alert alert-info">All fields are required</p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m =>m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.EventName)
        @Html.TextBoxFor(m => m.EventName, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.EventName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "2 Jul 2016" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control",  placeholder = "20:00" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
@section scripts
{
@Scripts.Render("~/bundles/jqueryval")    
}


